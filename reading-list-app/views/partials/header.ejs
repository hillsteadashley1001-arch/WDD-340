<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reading List App</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<header class="site-header">
  <div class="container header-content">

    <div class="brand">
      <a href="/" class="logo">ðŸ“š Reading List</a>
    </div>

    <nav class="main-nav">
      <a href="/books">Search Books</a>

      <% if (user) { %>
        <a href="/reading-list">My Reading List</a>
      <% } %>
    </nav>

    <div class="auth-controls">
      <% if (user) { %>
        <span class="user-name">Signed in as <strong><%= user.name %></strong></span>

        <form action="/auth/logout" method="POST" class="logout-form">
          <button type="submit" class="btn btn-logout">Logout</button>
        </form>
      <% } else { %>
        <a href="/auth/google" class="btn btn-login">Sign in with Google</a>
      <% } %>
    </div>

  </div>
</header>
